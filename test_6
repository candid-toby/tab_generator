  <div id="noteTable"></div>

<script>

  
     // Function to generate the note table
    function generateNoteTable() {
      var form = document.getElementById("noteForm");
       var string_1_start = form.elements.string_1_start.value;
      var notes = [];
      if (string_1_start === "a") {
      var notes = ["A", "A#", "B", "C", "C#", "D", "D#", "E", "F", "F#", "G", "G#"];
    }
      else if (string_1_start === "a_sharp") {
      var notes = ["A#", "B", "C", "C#", "D", "D#", "E", "F", "F#", "G", "G#", "A" ];
    }
    
    else if (string_1_start === "b") {
      var notes = ["B", "C", "C#", "D", "D#", "E", "F", "F#", "G", "G#", "A", "A#" ];
    }
    else if (string_1_start === "c") {
      var notes = [ "C", "C#", "D", "D#", "E", "F", "F#", "G", "G#", "A", "A#", "B" ];
    }
    else if (string_1_start === "c_sharp") {
      var notes = [ "C#", "D", "D#", "E", "F", "F#", "G", "G#", "A", "A#", "B", "C" ];
    }
    else if (string_1_start === "d") {
      var notes = [ "D", "D#", "E", "F", "F#", "G", "G#", "A", "A#", "B", "C", "C#" ];
    }
    else if (string_1_start === "d_sharp") {
      var notes = ["D#", "E", "F", "F#", "G", "G#", "A", "A#", "B", "C", "C#",  "D" ];
    }
    else if (string_1_start === "e") {
      var notes = ["E", "F", "F#", "G", "G#", "A", "A#", "B", "C", "C#",  "D", "D#" ];
    }
    else if (string_1_start === "f") {
      var notes = ["F", "F#", "G", "G#", "A", "A#", "B", "C", "C#",  "D", "D#", "E" ];
    }
    else if (string_1_start === "f_sharp") {
      var notes = [ "F#", "G", "G#", "A", "A#", "B", "C", "C#",  "D", "D#", "E", "F" ];
    }
    else if (string_1_start === "g") {
      var notes = [ "G", "G#", "A", "A#", "B", "C", "C#",  "D", "D#", "E", "F", "F#" ];
    }
    else if (string_1_start === "g_sharp") {
      var notes = [ "G#", "A", "A#", "B", "C", "C#",  "D", "D#", "E", "F", "F#", "G" ];
    }
    
    
      
      var table = "<table><tr><th>Fret Number</th><th>Note</th></tr>";

      for (var i = 1; i <= 21; i++) {
        var noteIndex = (i - 1) % notes.length;
        var note = notes[noteIndex];
        table += "<tr><td>" + i + "</td><td>" + note + "</td></tr>";
      }

      table += "</table>";

      document.getElementById("noteTable").innerHTML = table;
    }

  // Handle form submission
  var form = document.getElementById("noteForm");
  form.addEventListener("submit", function (event) {
    event.preventDefault(); // Prevent default form submission
    generateNoteTable(); // Call the function to generate the note table
  });

</script>
