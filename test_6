  <h1>Note Table</h1>
  <div id="noteTable"></div>

<script>
  function entire_fretboard() {
    var string_1_start = document.getElementById('string_1_start').value;
  }
  
     // Function to generate the note table
    function generateNoteTable() {
      var startingNote = "A";
      var notes = ["A", "A#", "B", "C", "C#", "D", "D#", "E", "F", "F#", "G", "G#"];
      var table = "<table><tr><th>Fret Number</th><th>Note</th></tr>";

      for (var i = 1; i <= 21; i++) {
        var noteIndex = (i - 1) % notes.length;
        var note = notes[noteIndex];
        table += "<tr><td>" + i + "</td><td>" + note + "</td></tr>";
      }

      table += "</table>";

      document.getElementById("noteTable").innerHTML = table;
    }

    // Check if string_1_start is "A" and generate the note table
    var string_1_start = "A"; // Replace with your Firebase data retrieval code

    if (string_1_start === "A") {
      generateNoteTable();
    }
</script>
